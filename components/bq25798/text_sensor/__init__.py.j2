        }
    )
    .extend(BQ25798_CLIENT_SCHEMA)
)

async def to_code(config):
    var = cg.new_Pvariable(config[CONF_ID])

    await cg.register_component(var, config)
    parent = await cg.get_variable(config[CONF_BQ25798_ID])

    # Sensors
{%- for def in settings %}
{%-     if def.type == "enum" %}
    if {{ def.name | lower }} := config.get(CONF_BQ25798_{{ def.name }}):
        sens = await text_sensor.new_text_sensor({{ def.name | lower }})
        cg.add(parent.assign_text_sensor_{{ def.name | lower }}(sens))
{%-     endif %}                    
{%- endfor %}
