CONFIG_SCHEMA = (
    cv.Schema(
        {
            cv.GenerateID(): cv.declare_id(BQ25798TextSensor),

{%- for def in settings %}
{%-     if def.type == "enum" %}
            cv.Optional(CONF_BQ25798_{{ def.name}}): text_sensor.text_sensor_schema(),
