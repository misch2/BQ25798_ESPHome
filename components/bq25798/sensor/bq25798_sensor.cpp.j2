#include "bq25798_sensor.h"

#include "esphome/core/log.h"

namespace esphome {
namespace bq25798 {

static const char* const TAG = "bq25798.sensor";

float BQ25798Sensor::get_setup_priority() const { return setup_priority::DATA; }

void BQ25798Sensor::dump_config() {
  ESP_LOGCONFIG(TAG, "Dumping BQ25798Sensor configuration...");
  if (this->parent_->is_failed()) {
    return;
  }

{% for def in settings %}
{%     if def._is_int or def._is_float or def._is_enum %}
  if (this->sensor_{{ def._snake_case_name }}_ != nullptr) {
    LOG_SENSOR("  ", "{{ def.name }}", this->sensor_{{ def._snake_case_name }}_);
  }
{%     endif %}
{% endfor %}

  LOG_UPDATE_INTERVAL(this);
}

void BQ25798Sensor::update() {
  if (this->parent_->is_failed()) {
    return;
  }

{% for def in settings %}
  // {{ def.name }} - {{ def.description }}
{%     if def._is_int or def._is_float or def._is_enum %}
  if (this->sensor_{{ def._snake_case_name }}_ != nullptr) {
{%         if def._is_int %}
    this->sensor_{{ def._snake_case_name }}_->publish_state(this->parent_->get_{{ def._snake_case_name }}_int(true));
{%         elif def._is_float %}
    this->sensor_{{ def._snake_case_name }}_->publish_state(this->parent_->get_{{ def._snake_case_name }}_float(true));
{%         else %}
    this->sensor_{{ def._snake_case_name }}_->publish_state(this->parent_->get_{{ def._snake_case_name }}_enum_int(true));
{%         endif %}
  }
{%     endif %}
{% endfor %}
}


{% for def in settings %}
{%     if def._is_int or def._is_float or def._is_enum %}
void BQ25798Sensor::assign_sensor_{{ def._snake_case_name }}(sensor::Sensor *sensor) {
  this->sensor_{{ def._snake_case_name }}_ = sensor;
}
{%     endif %}
{% endfor %}

}  // namespace bq25798
}  // namespace esphome